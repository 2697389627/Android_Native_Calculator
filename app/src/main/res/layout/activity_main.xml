<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#000000"
    >

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/textView"
        android:gravity="end|center_vertical"
        app:autoSizeTextType="uniform"
        android:textColor="#FFFFFF"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >

        <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        android:id="@+id/gv25"
        />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:id="@+id/gv50"
            />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"
            android:id="@+id/gv75"
            />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25"
            android:id="@+id/gh25"
            />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:id="@+id/gh50"
            />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"
            android:id="@+id/gh75"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gv25"
            app:layout_constraintBottom_toTopOf="@id/gh25"
            android:text="1"
            android:id="@+id/bt01"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/gv25"
            app:layout_constraintEnd_toStartOf="@id/gv50"
            app:layout_constraintBottom_toTopOf="@id/gh25"
            android:text="2"
            android:id="@+id/bt02"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/gv50"
            app:layout_constraintEnd_toStartOf="@id/gv75"
            app:layout_constraintBottom_toTopOf="@id/gh25"
            android:text="3"
            android:id="@+id/bt03"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCC22"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/gv75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gh25"
            android:text="+"
            android:id="@+id/bt_pluse"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gv25"
            app:layout_constraintBottom_toTopOf="@id/gh50"
            android:text="4"
            android:id="@+id/bt04"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh25"
            app:layout_constraintStart_toStartOf="@id/gv25"
            app:layout_constraintEnd_toStartOf="@id/gv50"
            app:layout_constraintBottom_toTopOf="@id/gh50"
            android:text="5"
            android:id="@+id/bt05"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh25"
            app:layout_constraintStart_toStartOf="@id/gv50"
            app:layout_constraintEnd_toStartOf="@id/gv75"
            app:layout_constraintBottom_toTopOf="@id/gh50"
            android:text="6"
            android:id="@+id/bt06"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCC22"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh25"
            app:layout_constraintStart_toStartOf="@id/gv75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gh50"
            android:text="-"
            android:id="@+id/bt_minus"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gv25"
            app:layout_constraintBottom_toTopOf="@id/gh75"
            android:text="7"
            android:id="@+id/bt07"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh50"
            app:layout_constraintStart_toStartOf="@id/gv25"
            app:layout_constraintEnd_toStartOf="@id/gv50"
            app:layout_constraintBottom_toTopOf="@id/gh75"
            android:text="8"
            android:id="@+id/bt08"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh50"
            app:layout_constraintStart_toStartOf="@id/gv50"
            app:layout_constraintEnd_toStartOf="@id/gv75"
            app:layout_constraintBottom_toTopOf="@id/gh75"
            android:text="9"
            android:id="@+id/bt09"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCC22"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh50"
            app:layout_constraintStart_toStartOf="@id/gv75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gh75"
            android:text="x"
            android:id="@+id/bt_multiplied"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gv25"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0"
            android:id="@+id/bt00"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCC22"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh75"
            app:layout_constraintStart_toStartOf="@id/gv25"
            app:layout_constraintEnd_toStartOf="@id/gv75"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="="
            android:id="@+id/bt_equals"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#FFCC22"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh75"
            app:layout_constraintStart_toStartOf="@id/gv75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="%"
            android:id="@+id/bt_divided"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>
